<div class="container">
  <div class="form-wrapper">
    <%= form_for(@book) do |f| %>
      <div class="form-group row">
        <label class="col-xs-2 col-form-label"><%= f.label(:title) %></label>
        <div class="col-xs-10">
          <%= f.text_field(:title) %>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-xs-2 col-form-label"><%= f.label(:author) %></label>
        <div class="col-xs-10">
          <%= f.text_field(:author) %>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-xs-2 col-form-label"><%= f.label(:genre) %></label>
        <div class="col-xs-10">
          <%= f.text_field(:genre) %>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-xs-2 col-form-label"><%= f.label(:star_rating) %></label>
        <div class="col-xs-10">
          <%= f.number_field(:star_rating) %>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-xs-2 col-form-label"><%= f.label(:notes) %></label>
        <div class="col-xs-10">
          <%= f.text_field(:notes) %>
        </div>
      </div>
      <%= f.hidden_field :user_id, :value => current_user.id %>
      <div class="form-group row">
        <div class="offset-sm-6 col-sm-6">
          <button type="submit" class="btn btn-primary"><%= f.submit("Add Book")%></button>
        </div>
      </div>
    <% end %>
  </div>
</div>
