<div class="form">

      <ul class="tab-group">
        <li class="tab active"><a href="#signup">Sign Up</a></li>
        <li class="tab"><a href="#login">Log In</a></li>
      </ul>

      <div class="tab-content">
        <div id="signup">
          <h1 class="h1-form">Sign Up for Free</h1>

          <form action="/users" method="post">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />

            <div class="field-wrap">
              <label class="form-label">First Name<span class="req">*</span></label>
              <input type="text" name="user[first_name]"/>
            </div>

            <div class="field-wrap">
              <label class="form-label">Last Name<span class="req">*</span></label>
              <input type="text" name="user[last_name]"/>
            </div>

            <div class="field-wrap">
              <label class="form-label">Username<span class="req">*</span></label>
              <input type="text" name="user[username]"/>
            </div>

            <div class="field-wrap">
              <label class="form-label">Email Address<span class="req">*</span></label>
              <input type="email" name="user[email]"/>
            </div>

            <div class="field-wrap">
              <label class="form-label">Set a Password<span class="req">*</span></label>
              <input type="password" name="user[password]"/>
            </div>

            <div class="field-wrap">
              <label class="form-label">Confirm Password<span class="req">*</span></label>
              <input type="password" name="user[password_confirmation]"/>
            </div>

            <button type="submit" class="button button-block"/>Get Started</button>

          </form>

        </div>

        <div id="login">
          <h1 class="h1-form">Welcome Back!</h1>

          <form action="/sign-in" method="POST">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />

            <div class="field-wrap">
            <label class="form-label">Email Address<span class="req">*</span></label>
            <input type="email" required autocomplete="off" name="user[email]"/>
          </div>

          <div class="field-wrap">
            <label class="form-label">Password<span class="req">*</span></label>
            <input type="password" required autocomplete="off" name="user[password]"/>
          </div>

          <p class="forgot"><a href="#">Forgot Password?</a></p>

          <button class="button button-block" type="submit"/>Log In</button>

          </form>

        </div>

      </div>

</div>
